{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "declaration": false,
    "importHelpers": false,
    "alwaysStrict": true,
    "target": "ES2018",
    "module": "commonJS",
    "moduleResolution": "node",
    "lib": ["ES2018"],
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "outDir": "lib"
  },
  "ts-node": {
    "transpileOnly": true,
    "compiler": "typescript-cached-transpile"
  },
  "include": ["src/**/*"]
}
